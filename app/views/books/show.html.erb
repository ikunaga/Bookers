<% if flash[:notice] %>
<div class="flash">
	<%= flash[:notice] %>
</div>
<% end %>
<table class ="show-table">
	<tr>
		<th>Title:</th>
		<th><%= @book.title %></th>
	</tr>
	<tr>
		<th>Body:</th>
		<th><%= @book.body %></th>
	</tr>
</table>

<div class = "show-link">
<%= link_to "Edit", edit_book_path(@book), :style=>"color:black;" %> |
<%= link_to "Back", books_path, :style=>"color:black;" %>
</div>